<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".addEventActivity">

    <EditText
            android:layout_height="55dp"
            android:ems="10"
            android:id="@+id/reminder"
            android:inputType="text" android:layout_width="301dp" android:layout_marginTop="128dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="52dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="52dp"
            android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp" android:textSize="25sp"/>
    <Button
            android:text="add date"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:id="@+id/addDateButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/reminder" android:textSize="20sp"/>
    <TextView
            android:text="--/--/----"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showDate" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/addDateButton" android:textSize="30sp"/>
    <TextView
            android:text="Enter reminder..."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/remText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="60dp" android:layout_marginStart="60dp" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/reminder" android:textSize="25sp"/>
    <Button
            android:text="add time"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:id="@+id/addTimeButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/showDate" android:textSize="20sp"/>
    <TextView
            android:text="-- : --"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showTime" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/addTimeButton" android:textSize="30sp"/>
    <Button
            android:text="Add Event"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:id="@+id/AddEventOKButton" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/showTime" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:textSize="24sp"/>
</android.support.constraint.ConstraintLayout>