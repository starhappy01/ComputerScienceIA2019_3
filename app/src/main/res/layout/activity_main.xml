<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="add single event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/addEventButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp" android:layout_marginTop="200dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="view events"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/viewEventButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp" android:textSize="20sp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/addMultEventsButton"/>
    <Button
            android:text="Add repeat event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/addMultEventsButton"
            app:layout_constraintTop_toBottomOf="@+id/addEventButton"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp" android:textSize="20sp"/>
</android.support.constraint.ConstraintLayout>